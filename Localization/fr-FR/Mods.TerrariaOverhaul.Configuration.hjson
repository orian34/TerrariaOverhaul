Music: {
	DisplayName: "Musique"
	Description:
		'''
		Overhaul contient quelques améliorations pour le fonctionnement de la lecture de musique.
		Il y a aussi une bande sonore entièrement remasterisée - Cliquez sur le bouton en haut à gauche pour l'avoir!
		'''

	EnableMusicPlaybackPositionPreservation: {
		DisplayName: "Activer la Reprise de Lecture"
		Description:
			'''
			Les pistes de musique se mettront en pause au lieu de s'arrêter.
			Ce qui veut dire que quand vous réentrez dans un biome, la piste de musique reprendra là où elle s'était mise en pause.
			Améliore grandement la sensation de jeu, car vous n'entendrez plus constamment les intros des pistes en vous déplaçant.
			'''
	}

	EnableBossDeathMusicStop: {
		// DisplayName: "Enable Boss Death Music Stop"
		// Description: "When enabled, music will be temporarily stopped whenever a boss is killed. For a dramatic effect."
	}
}

Movement: {
	DisplayName: "Mobilité"
	Description: "Overhaul renouvelle et perfectionne presque tout les aspects de la mobilité du joueur, qui est très utilisée."

	EnableAutoJump: {
		DisplayName: "Activer le Saut Automatique"
		Description: "Permet de rester appuyé sur la touche de saut pour sauter en boucle."
	}

	EnableVerticalAccelerationChanges: {
		DisplayName: "Activer l'Accélération Verticale"
		Description: "Rajoute la friction aérienne et quasi-infinie limite de vitesse de chute."
	}

	EnableHorizontalAccelerationChanges: {
		DisplayName: "Activer l'Accélération Horizontale"
		Description: "Modifie la friction horizontale, limite de vitesse de course et accélération."
	}

	EnableBunnyhopping: {
		DisplayName: "Activer le Saut de Lapin"
		Description:
			'''
			Le Saut de Lapin procure un léger boost latéral pour chaque saut consécutif.
			Si désactivé, retire certains accessoires.
			'''
	}

	EnableClimbing: {
		DisplayName: "Activer l'Escalade"
		Description: "Escalader permet de grimper en pressant la touche haut."
	}

	EnableGrapplingHookPhysics: {
		DisplayName: "Activer la Physique du Grappin"
		Description:
			'''
			Le fonctionnement des grappins sera modifié pour permettre de se balancer en utilisant les touches directionelles.
			NOTE: Il est possible d'effectuer un lancer de grappin classique en gardant pressé la touche du grappin, donc il n'y a pas de choix à faire et on peut combiner les deux.
			NOTE: Cette option ne s'applique pas à tout les grappins du jeu, et les multigrappins retournent au fonctionnement classique quand plus d'un crochet est ancré.
			'''
	}

	EnableWallJumping: {
		DisplayName: "Activer le Saut Mural"
		Description:
			'''
			Le Saut Mural est une nouvelle technique qui requiert les griffes d'escalade ou les chaussures à pointes.
			Effectué en touchant un mur avec le dos tout en appuyant sur la touche haut sans presser une direction horizontale.
			'''
	}

	EnableWallFlips: {
		DisplayName: "Activer le Rebond Mural"
		Description:
			'''
			Le Rebond Mural est une nouvelle technique qui ne requiert pas d'accessoires.
			Effectué en touchant un mur de face avec suffisamment de vitesse tout en appuyant sur la direction opposée.
			'''
